<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpImpressum"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtHelpTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hilfeTitle"
        android:layout_marginTop="13dp"

        android:textSize="20dp"
        android:textColor="@color/black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hilfeText"

        android:textSize="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHelpTitle"

        android:autoLink="web"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/txtImpressumTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/impressumTitle"

        android:textSize="20dp"
        android:textColor="@color/black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHelp"

        android:layout_marginTop="33dp"/>

    <TextView
        android:id="@+id/txtImpressum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/impressumText"

        android:textSize="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtImpressumTitle"

        android:autoLink="web"
        android:layout_marginTop="18dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>